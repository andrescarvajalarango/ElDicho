# ============================================
# ElDicho Backend - Environment Variables
# ============================================
# Copia este archivo como .env y ajusta los valores

# --- Aplicación ---
APP_NAME=ElDicho API
DEBUG=true

# --- Base de datos ---
# SQLite (desarrollo)
DATABASE_URL=sqlite+aiosqlite:///./eldicho.db
# PostgreSQL (producción)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/eldicho

# --- Autenticación JWT ---
# IMPORTANTE: Cambia esta clave en producción (genera una con: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=CHANGE-ME-in-production-use-a-real-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# --- CORS ---
# Orígenes permitidos (separados por coma)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# --- Rate Limiting ---
RATE_LIMIT_PER_MINUTE=60
